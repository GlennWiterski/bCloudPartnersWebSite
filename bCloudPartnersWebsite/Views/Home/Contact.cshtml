@{
    ViewBag.Title = "bCloudPartners - Contact us at either one of your global locations.";
    ViewBag.MetaDescription = "We look forward to helping you with your cloud transition.";
    ViewBag.MetaKeywords = "staff, consultants, advisors, technical, cloud education, cloud collboration, cloud advise";
    ViewBag.CanonicalURL = "http://www.bCloudPartners.com";
}>

@model bCloudPartnersWebsite.ViewModel.ContactViewModel

<div class="container">
    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">
                    <strong>Contact US</strong>

                </h2>
                <hr>
            </div>
            <div>
                <p class="text-center">
                    Email:
                    <strong><a href="mailto:consultants@bCloudPartners.com" style="color:#248dcc">consultants@bCloudPartners.com</a></strong>
                </p>
                <p class="text-center">
                    <strong>
                        Europe Address:
                    </strong>
                    <br />
                    Tal Str 11
                    <br>67700 Niederkirchen Germany

                    <hr />
                <p class="text-center">
                    <strong>Stateside Address:</strong>
                    <br />
                    7990 S New Abbey Dr
                    <br>Tucson, AZ 85747

                </p>

            </div>
            <div class="clearfix"></div>
        </div>
    </div>

    
    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">
                    <strong>
                        Contact Form
                    </strong>
                </h2>
                <hr>
                <p>Please enter your contact information and a member of the bCloudPartners team will contact you as quickly as possible.</p>

                <form action='@Url.Action("Contact","Home")' method='post'>
                    <div class="row">
                        <div class="form-group col-lg-4">
                            <label>Name</label>
                            @Html.EditorFor(model => model.Name)
                            @Html.ValidationMessageFor(model => model.Name)

                        </div>
                        <div class="form-group col-lg-4">
                            <label>Email</label>
                            @Html.EditorFor(model => model.Email)
                            @Html.ValidationMessageFor(model => model.Email)

                        </div>
                        <div class="form-group col-lg-4">
                            <label>Phone</label>
                            @Html.EditorFor(model => model.Phone)

                        </div>

                        <div class="text-center" >
                            <label> Message</label>
                            @Html.TextAreaFor(model => model.Message, new { style = "width : 500px; height : 80px;" })
                            @Html.ValidationMessageFor(model => model.Message)
                        </div>
                        <hr />
                        
                    </div>
                    <div class="intro-text text-center" >
                        <input type='submit' value='Send Message' style="color:#248dcc ; font-weight:bold" />
                    </div>

                    <p>@ViewBag.Message<p/>
                </form>

            </div>
        </div>
    </div>
</div>